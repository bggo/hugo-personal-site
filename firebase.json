{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{
      // Cache off for images and js
      "source": "**/*.@(jpg|js|jpeg|gif|png)",
      "headers": [{
        "key": "Cache-Control",
        "value": "no-cache"
      }
      ]
    }
    ]
  }
}